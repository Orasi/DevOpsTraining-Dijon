- team = TeamPresenter.new(@team['team'])
.dashboard-page-header
  %h2
    = team.name + ' Team'

.container-fluid
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          %h3.panel-title= team.name
        .panel-body
          = team.description if team.description
          = 'No Description Provided' unless team.description
  .row
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            Projects
            = link_to ' Add Project', '', class: 'pull-right btn default-label fa fa-bar-chart small', remote: true

        .panel-body
          %table.table.table-condensed.table-overview.table-hover
            %tbody#projects
              - team['projects'].each_with_index do |p, i|
                - p = ProjectPresenter.new(p)
                = render partial: 'teams/project', locals: {project: p, project_counter: i}
    .col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            Users
            = link_to ' Add User', '', class: 'pull-right btn default-label fa fa-user-plus small', remote: true
        .panel-body
          %table.table.table-condensed.table-overview.table-hover
            %tbody#users
              - team['users'].each_with_index do |u, i|
                - u = UserPresenter.new(u)
                = render partial: 'teams/user', locals: {user: u, counter: i}

