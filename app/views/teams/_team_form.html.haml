= form_tag(team['name'] ? team_path(team['id']) : teams_path,
           method: team['name'] ? :put : :post,
           role: :form) do
  .form-group
    = fields_for :team do |f|
      %label Name
      = text_field_tag 'team[name]', team['name'], class: 'form-control', required: true
    .form-group
      %label Description
      = text_area_tag 'team[description]', team['description'], class: 'form-control', required: true
  .form-group
    = submit_tag 'Submit', class: 'btn btn-primary'
    .pull-right= link_to 'Delete Team', team_path(team['id']), method: :delete, class: 'btn btn-danger' if team['name']
